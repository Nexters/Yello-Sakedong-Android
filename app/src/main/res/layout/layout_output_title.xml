<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="143dp"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_add_circle_black_84dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/emo_m_2" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="푸팟퐁커리"
            android:textColor="#111111"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/txt_food_original_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_food_name"
            android:layout_marginTop="11dp"
            android:text="여기는 한자"
            android:textColor="#777777"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/txt_food_name_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_food_original_name"
            android:text="여기는 영어"
            android:textColor="#777777"
            android:textSize="17dp" />

    </RelativeLayout>

</LinearLayout>