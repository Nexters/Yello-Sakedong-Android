<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@drawable/layoutstyle_white"

    >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 타이틀바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/layoutstyle_lightblue"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#ffffff"
                android:src="@drawable/group_3" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="어떤 음식인가요?"
                android:textColor="#959595"
                android:textSize="15dp" />
        </LinearLayout>
        <!-- 타이틀바 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:text="맛을 새롭게 표현해주세요."
                    android:textColor="#979797" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/emo_s_5" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/emo_s_4" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"

                    android:contentDescription="@null"
                    app:srcCompat="@drawable/emo_s_1" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/emo_s_2" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#ffffff"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/emo_s_3" />
            </LinearLayout>

            <Button
                android:id="@+id/regi"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="16dp"
                android:text="등록하기"
                android:textColor="#959595"

                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <!-- 확인 버튼 -->

        <!-- 확인 버튼 -->
    </LinearLayout>
</RelativeLayout>