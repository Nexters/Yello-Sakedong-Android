<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_output_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <RelativeLayout
        android:id="@+id/layout_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_output_rank"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerVertical="true"
            android:background="@color/colorBlack"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/txt_output_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/layout_output_rank"
            android:text="노랑사케동"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_output_like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="3"
            android:textSize="16sp" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/image_output_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@id/txt_output_like_count"
            android:src="@drawable/icn_delete" />

        <ImageView
            android:id="@+id/image_output_like"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/image_output_delete" />

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_output_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_item_content"
        android:text="시큼한 비누맛"
        android:textColor="#111111"
        android:layout_marginBottom="24dp"
        android:textSize="16sp" />

</RelativeLayout>